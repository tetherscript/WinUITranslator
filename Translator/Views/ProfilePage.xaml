<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Translator.ProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Translator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Translator"
    NavigationCacheMode="Required"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:InvBoolConv
            x:Key="InvBoolConv" />
        <converters:BoolToVisibilityConv
            x:Key="BoolToVisibilityConv" />
    </Page.Resources>
       
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
            
        <!--SELECT FUNCTION-->
        <StackPanel
            Grid.Row="0"
            Margin="10 10 10 10"
            Spacing="10">
            <StackPanel
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <StackPanel
                    Spacing="30">
                    <StackPanel
                        Spacing="40"
                        Orientation="Horizontal">
                        <ComboBox
                            IsEnabled="{x:Bind GVm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                            ItemsSource="{x:Bind GVm.Profiles}"
                            MinWidth="400"
                            SelectedValue="{x:Bind GVm.SelectedProfile, Mode=TwoWay}" />
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="10">
                            <Button
                                IsEnabled="{x:Bind Vm.CanClone, Mode=OneWay}"
                                Command="{x:Bind Vm.CloneCommand}"
                                Content="Clone" />
                            <Button
                                IsEnabled="{x:Bind Vm.CanRename, Mode=OneWay}"
                                Command="{x:Bind Vm.RenameCommand}"
                                Content="Rename" />
                            <Button
                                IsEnabled="{x:Bind Vm.CanDelete, Mode=OneWay}"
                                Command="{x:Bind Vm.DeleteCommand}"
                                Content="Delete" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!--CLONING-->
                    <StackPanel
                        Margin="10,0,0,0"
                        Visibility="{x:Bind Vm.IsCloning, Mode=OneWay, Converter={StaticResource BoolToVisibilityConv}}"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="40">
                        <StackPanel Spacing="10">
                            <TextBox
                                MinWidth="405"
                                IsReadOnly="False"
                                FontFamily="Courier New"
                                HorizontalAlignment="Left"
                                IsSpellCheckEnabled="false"
                                IsTextPredictionEnabled="False"
                                Text="{x:Bind Vm.CloneName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Enter name for the cloned profile..."
                                TextAlignment="Left">
                            </TextBox>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="40">
                                <Button
                                    IsEnabled="{x:Bind Vm.IsCloneNameInvalid, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                                    Command="{x:Bind Vm.CloneSaveCommand}"
                                    Content="Save" />
                                <Button
                                    Command="{x:Bind Vm.CloneCancelCommand}"
                                    Content="Cancel" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Visibility="{x:Bind Vm.IsCloneNameInvalid, Mode=OneWay, Converter={StaticResource BoolToVisibilityConv}}"
                                    Text="&#x274C; Invalid or duplicate profile name" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!--RENAME-->
                    <StackPanel
                        Margin="10,0,0,0"
                        Visibility="{x:Bind Vm.IsRenaming, Mode=OneWay, Converter={StaticResource BoolToVisibilityConv}}"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="40">
                        <StackPanel
                            Spacing="10">
                            <TextBox
                                MinWidth="405"
                                IsReadOnly="False"
                                FontFamily="Courier New"
                                HorizontalAlignment="Left"
                                IsSpellCheckEnabled="false"
                                IsTextPredictionEnabled="False"
                                Text="{x:Bind Vm.RenameName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                PlaceholderText="Enter new profile name..."
                                TextAlignment="Left">
                            </TextBox>
                            <StackPanel
                                Orientation="Horizontal"
                                Spacing="40">
                                <Button
                                    IsEnabled="{x:Bind Vm.IsRenameNameInvalid, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                                    Command="{x:Bind Vm.RenameSaveCommand}"
                                    Content="Save" />
                                <Button
                                    Command="{x:Bind Vm.RenameCancelCommand}"
                                    Content="Cancel" />
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Visibility="{x:Bind Vm.IsRenameNameInvalid, Mode=OneWay, Converter={StaticResource BoolToVisibilityConv}}"
                                    Text="&#x274C; Invalid or duplicate profile name" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!--DELETE-->
                    <StackPanel
                        Margin="10,0,0,0"
                        Visibility="{x:Bind Vm.IsDeleting, Mode=OneWay, Converter={StaticResource BoolToVisibilityConv}}"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="40">
                        <TextBlock
                            VerticalAlignment="Center"
                            Text="Are you sure want to delete the selected profile?" />
                        <Button
                            Command="{x:Bind Vm.DeleteYesCommand}"
                            Content="Yes" />
                        <Button
                            Command="{x:Bind Vm.DeleteNoCommand}"
                            Content="No" />
                    </StackPanel>


                </StackPanel>

            </StackPanel>

        </StackPanel>

        <!--CONTENT-->

        <TabView
            Margin="10, 0, 10, 0"
            Grid.Row="1"
            SelectedIndex="{x:Bind GVm.ProfileTestLastTabIndex, Mode=TwoWay}"
            Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
            IsAddTabButtonVisible="False"
            TabWidthMode="Equal"
            VerticalAlignment="Stretch"
            CloseButtonOverlayMode="OnPointerOver" >
            <TabView.TabItems>
                
                <TabViewItem
                    MaxWidth="150"
                    IsClosable="False"
                    BorderThickness="0"
                    Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"
                    Header="Test">
                    <TabViewItem.IconSource>
                        <SymbolIconSource
                            Symbol="Globe" />
                    </TabViewItem.IconSource>
                    <local:ProfileTestPage />
                </TabViewItem>

                <TabViewItem
                    Margin="10, 0, 0, 0"
                    MaxWidth="150"
                    IsClosable="False"
                    BorderThickness="0"
                    BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"
                    Header="Settings">
                    <TabViewItem.IconSource>
                        <SymbolIconSource
                            Symbol="Setting" />
                    </TabViewItem.IconSource>
                    <local:ProfileSettingPage />
                </TabViewItem>

            </TabView.TabItems>
        </TabView>

    </Grid>
  
</Page>
