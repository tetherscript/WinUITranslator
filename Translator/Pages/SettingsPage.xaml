<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Translator.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Translator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <ScrollViewer
            Grid.Row="0">
            <StackPanel
                Margin="10,10,10,10">

                <RadioButtons
                    x:Name="rbTheme"
                    IsTabStop="False"
                    Header="Theme"
                    MaxColumns="3"
                    SelectedIndex="{x:Bind Vm.ThemeIndex, Mode=TwoWay}">
                    <RadioButton
                        x:Uid="Default_rb"
                        Content="Default" />
                    <RadioButton
                        x:Uid="Light_rb"
                        Content="Light" />
                    <RadioButton
                        x:Uid="Dark_rb"
                        Content="Dark" />
                </RadioButtons>

                <ToggleSwitch
                    Margin="0 10 0 0"
                    Header="Debug Mode"
                    OffContent="Off"
                    OnContent="On"
                    IsOn="{x:Bind Vm.Debug, Mode=TwoWay}" />

                <ToggleSwitch
                    Margin="20 0 0 0"
                    Header="Retranslate"
                    OffContent="Off"
                    OnContent="On"
                    IsEnabled="{x:Bind Vm.Debug, Mode=OneWay}"
                    IsOn="{x:Bind Vm.DebugRetranslate, Mode=TwoWay}" />

                <NumberBox
                    Margin="40 0 0 0"
                    Header="Retranslate this number of items"
                    IsEnabled="{x:Bind Vm.Debug, Mode=OneWay}"
                    HorizontalAlignment="Left"
                    Value="{x:Bind Vm.DebugRetranslateItemsCount, Mode=TwoWay}"
                    SpinButtonPlacementMode="Inline"
                    Minimum="1"
                    Maximum="100"
                    SmallChange="1"
                    LargeChange="10" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
