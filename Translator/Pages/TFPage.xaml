        --><!--TEST STRINGS--><!--    
        <TextBox
            Grid.Row="2"
            Margin="10 0 10 10"
            FontFamily="Courier New"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            FontWeight="Light"
            IsReadOnly="false"
            IsSpellCheckEnabled="False"
            TextAlignment="Left"
            Text="{x:Bind Vm.TFTextToTranslate, Mode=TwoWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            IsTextPredictionEnabled="False">
        </TextBox>

        --><!--TRANSLATE--><!--
        <StackPanel
            Grid.Row="3"
            Margin="10, 10, 0, 10"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                HorizontalAlignment="Center"
                IsEnabled="{x:Bind Vm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                Command="{x:Bind Vm.StartTFTestCommand}">
                <Button.Content>
                    <StackPanel
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock
                            Text="Translate" />
                        <ProgressRing
                            Width="16"
                            Height="16"
                            HorizontalAlignment="Center"
                            IsActive="{x:Bind Vm.TFIsTranslating, Mode=OneWay}" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button
                IsEnabled="{x:Bind Vm.TFIsTranslating, Mode=OneWay}"
                Command="{x:Bind Vm.TFCancelTranslateCommand}"
                Content="Cancel" />


            <TextBlock
                Margin="20, 0, 0, 0"
                VerticalAlignment="Center"
                Text="->" />
            <ComboBox
                ItemsSource="{x:Bind Vm.CultureList, Mode=OneWay}"
                SelectedValue="{x:Bind Vm.TFToCulture, Mode=TwoWay}"
                SelectedIndex="0"
                ToolTipService.ToolTip="The language that the text will be translated into"
                HorizontalAlignment="Left"
                VerticalAlignment="Top" />

            <TextBlock
                VerticalAlignment="Center"
                Text="x" />
            <NumberBox
                x:Name="NumberBoxSpinButtonPlacementExample"
                Minimum="1"
                Maximum="100"
                Value="{x:Bind Vm.TFTestRepeats, Mode=TwoWay}"
                SpinButtonPlacementMode="Hidden"
                ToolTipService.ToolTip="The number of repeats per hint token type.  Increase this value to see how consistent (deterministic) the translation is."
                SmallChange="1"
                LargeChange="15" />

        </StackPanel>

