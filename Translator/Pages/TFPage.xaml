<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Translator.TFPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Translator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Translator"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:InvBoolConv
            x:Key="InvBoolConv" />
        <converters:BoolToOpacityConv
            x:Key="BoolToOpacityConv" />
    </Page.Resources>

        
        <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
            
            <!--SELECT FUNCTION-->
        <StackPanel
            Grid.Row="0"
            Margin="10 10 10 10"
            Spacing="10">
            <StackPanel
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <StackPanel
                    Spacing="10">
                    <StackPanel
                        Spacing="20"
                        Orientation="Horizontal">
                        <ComboBox
                            IsEnabled="{x:Bind Vm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                            ItemsSource="{x:Bind Vm.TranslationFunctions}"
                            SelectedValue="{x:Bind Vm.SelectedTranslationFunction, Mode=TwoWay}"
                            DisplayMemberPath="Display"
                            SelectedValuePath="Value"
                            Width="250" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>
            <TextBlock
                TextWrapping="WrapWholeWords"
                Text="Test a Translation Function with a combination of hint tokens and text.">
            </TextBlock>
            <StackPanel
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock
                    Text="Valid test tokens are:">
                </TextBlock>
                <TextBlock
                    TextWrapping="Wrap"
                    Text="Valid test tokens are:">
                </TextBlock>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Margin="10, 0, 10, 0" >

                <SelectorBar
                    x:Name="sbTabs"
                    Loaded="SbTabs_Loaded"  
                    SelectionChanged="SelectorBar_SelectionChanged">
                    <SelectorBarItem
                        Style="{StaticResource SubtitleTextBlockStyle}"
                        x:Name="sbiTest"
                        Tag="Test"
                        Text="Test" />
                    <SelectorBarItem
                        x:Name="sbiSettings"
                        Tag="Settings"
                        Text="Settings" />
                </SelectorBar>

                <Frame
                    x:Name="frContent"
                    IsNavigationStackEnabled="False" />

            </StackPanel>

        </StackPanel>

        <!--CONTENT-->

        <TabView
            Visibility="Collapsed"
            Margin="10, 0, 10, 0"
            Grid.Row="1"
            Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
            IsAddTabButtonVisible="False"
            CloseButtonOverlayMode="OnPointerOver"
            >
            <TabView.TabItems>
                
                <TabViewItem
                    BorderThickness="1"
                    Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
                    BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"
                    Header="Test">
                    <TabViewItem.IconSource>
                        <SymbolIconSource
                            Symbol="Globe" />
                    </TabViewItem.IconSource>
                    <local:TFTestPage />
                </TabViewItem>

                <TabViewItem
                    IsClosable="False"
                    BorderThickness="1"
                    BorderBrush="{ThemeResource ControlStrongStrokeColorDefaultBrush}"
                    Header="Settings">
                    <TabViewItem.IconSource>
                        <SymbolIconSource
                            Symbol="Setting" />
                    </TabViewItem.IconSource>
                    <local:TFSettingsPage />
                </TabViewItem>

            </TabView.TabItems>
        </TabView>

