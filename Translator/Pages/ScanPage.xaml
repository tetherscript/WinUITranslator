<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Translator.ScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Translator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Translator"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:InvBoolConv
            x:Key="InvBoolConv" />
    </Page.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>
        


        <StackPanel
            Grid.Row="0"
            Margin="10 10 10 10"
            Spacing="10">
            <StackPanel
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <StackPanel
                    Spacing="10">
                    <StackPanel
                        Spacing="20"
                        Orientation="Horizontal">
                        <Button
                            IsEnabled="{x:Bind Vm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                            Command="{x:Bind Vm.StartScanCommand}"
                            Content="Scan" />
                        <ProgressRing
                            IsActive="{x:Bind Vm.IsScanning, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
                    
            </StackPanel>
            <TextBlock
                TextWrapping="WrapWholeWords"
                Text="The scan searches the target project for translatable elements, including .xaml elements with x:Uid and Hint Token prefixes, as well as any historical TLocalized.Get() calls. These items are then saved to the \Strings\en-US\Resources.resw file.">
            </TextBlock>

        </StackPanel>

        <TextBox
            Grid.Row="1"
            Margin="10 0 10 10"
            FontFamily="Courier New"
            AcceptsReturn="True"
            TextWrapping="NoWrap"
            FontWeight="Light"
            IsReadOnly="false"
            TextAlignment="Left"
            Text="{x:Bind Vm.ScanLog, Mode=OneWay}"
            SelectionStart="{x:Bind Vm.ScanLogSelectionStart, Mode=OneWay}"
            SelectionLength="{x:Bind Vm.ScanLogSelectionLength, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            IsTextPredictionEnabled="False">
        </TextBox>



    </Grid>
</Page>
