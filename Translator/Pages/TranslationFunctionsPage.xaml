<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Translator.TranslationFunctionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Translator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Translator"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:InvBoolConv
            x:Key="InvBoolConv" />
        <converters:BoolToOpacityConv
            x:Key="BoolToOpacityConv" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>


        <!--SELECT FUNCTION-->
        <StackPanel
            Grid.Row="0"
            Margin="10 10 10 10"
            Spacing="10">
            <StackPanel
                VerticalAlignment="Top"
                Orientation="Horizontal">

                <StackPanel
                    Spacing="10">
                    <StackPanel
                        Spacing="20"
                        Orientation="Horizontal">
                        <ComboBox
                            IsEnabled="{x:Bind Vm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                            ItemsSource="{x:Bind Vm.TranslationFunctions}"
                            SelectedValue="{x:Bind Vm.SelectedTranslationFunction, Mode=TwoWay}"
                            DisplayMemberPath="Display"
                            SelectedValuePath="Value"
                            Width="250" />
                    </StackPanel>
                </StackPanel>

            </StackPanel>
            <TextBlock
                TextWrapping="WrapWholeWords"
                Text="Test your Translation Function by adjusting settings and testing a translateable item.">
            </TextBlock>

        </StackPanel>

        <!--SETTINGS-->
        <StackPanel
            Grid.Row="1"
            Margin="10 20 10 0"
            Spacing="10">
            <StackPanel
                Orientation="Horizontal"
                Spacing="20">
                <Button
                    IsEnabled="{x:Bind Vm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                    Command="{x:Bind Vm.TFTestLoadSettingsCommand}"
                    Content="Load Settings" />
                <Button
                    IsEnabled="{x:Bind Vm.TFSettingsModified, Mode=OneWay}"
                    Command="{x:Bind Vm.TFTestSaveSettingsCommand}"
                    Content="Save Settings" />
            </StackPanel>
            
            <TextBox
                Margin="0 0 0 0"
                FontFamily="Courier New"
                AcceptsReturn="True"
                TextWrapping="NoWrap"
                FontWeight="Light"
                IsReadOnly="false"
                TextAlignment="Left"
                MaxHeight="300"
                IsSpellCheckEnabled="False"
                Text="{x:Bind Vm.TFSettings, Mode=TwoWay}"
                PlaceholderText=""
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                IsTextPredictionEnabled="False">
            </TextBox>

        </StackPanel>

        <!--TRANSLATE-->
        <StackPanel
            Grid.Row="2"
            Margin="10 20 10 10"
            Spacing="10">

            <StackPanel
                Orientation="Horizontal"
                Spacing="20">
                <Button
                    IsEnabled="{x:Bind Vm.IsBusy, Mode=OneWay, Converter={StaticResource InvBoolConv}}"
                    Command="{x:Bind Vm.StartTFTestCommand}"
                    Content="Translate" />
                <ToggleSwitch
                    OffContent="Simple Log"
                    OnContent="Verbose Log"
                    IsOn="{x:Bind Vm.Debug, Mode=TwoWay}" />
                <ProgressRing
                    IsActive="{x:Bind Vm.TFIsTranslating, Mode=OneWay}">
                </ProgressRing>
            </StackPanel>
            <TextBox
                Margin="0 0 0 10"
                FontFamily="Courier New"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                FontWeight="Light"
                IsReadOnly="false"
                TextAlignment="Left"
                MaxHeight="300"
                IsSpellCheckEnabled="False"
                PlaceholderForeground="Gray"
                Text="{x:Bind Vm.TFTextToTranslate, Mode=TwoWay}"
                PlaceholderText="Enter the text to translate"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                IsTextPredictionEnabled="False">
            </TextBox>

        </StackPanel>

        <!--LOG-->
        <TextBox
            Grid.Row="3"
            Margin="10 0 10 10"
            FontFamily="Courier New"
            AcceptsReturn="True"
            TextWrapping="NoWrap"
            FontWeight="Light"
            IsReadOnly="false"
            IsSpellCheckEnabled="False"
            TextAlignment="Left"
            Text="{x:Bind Vm.TFLog, Mode=OneWay}"
            SelectionStart="{x:Bind Vm.TFLogSelectionStart, Mode=OneWay}"
            SelectionLength="{x:Bind Vm.TFLogSelectionLength, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            IsTextPredictionEnabled="False">
        </TextBox>

    </Grid>
</Page>
