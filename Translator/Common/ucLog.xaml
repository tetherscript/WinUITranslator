<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Translator.Log.ucLog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Translator.Log"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Translator"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:InvBoolConv
            x:Key="InvBoolConv" />
        <converters:BoolToOpacityConv
            x:Key="BoolToOpacityConv" />
        <converters:BoolToVisibilityConv
            x:Key="BoolToVisibilityConv" />

        <x:Double
            x:Key="ListViewItemMinHeight">16</x:Double>
        
        <DataTemplate
            x:Key="LogItemTemplate"
            x:DataType="local:TLogItemEx">


            <Grid
                ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="Auto" />
                    <ColumnDefinition
                        Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="{x:Bind LineNumber}"
                    Margin="4,2,4,2"
                    FontFamily="Courier New"
                    FontWeight="ExtraLight"
                    TextAlignment="Right"
                    Opacity="0.5" />

                <TextBlock
                    Grid.Column="1"
                    Text="{x:Bind Type}"
                    Margin="4,3,4,3"
                    TextWrapping="Wrap"
                    FontFamily="Courier New"
                    FontWeight="ExtraLight"
                    Opacity="0.75" />

                <StackPanel
                    Grid.Column="2"
                    Spacing="10">
                    <TextBlock
                        Text="{x:Bind Message}"
                        Margin="4,2,4,2"
                        FontFamily="Courier New"
                        TextWrapping="Wrap" />
                    <TextBlock
                        Text="sdfdsf"
                        Visibility="{x:Bind HasProfileResults, Converter={StaticResource BoolToVisibilityConv}}"
                        Margin="4,2,4,2"
                        FontFamily="Courier New"
                        TextWrapping="Wrap" />

                </StackPanel>

            </Grid>


        </DataTemplate>
    </UserControl.Resources>
    
    <Grid
        Margin="10, 0, 10, 0"
        RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            Spacing="15">
            <TextBox
                x:Name="SearchBox"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False"
                Width="200"
                Text="{x:Bind Vm.SearchStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                PlaceholderText="Search..." />
            <ItemsControl
                ItemsSource="{x:Bind LogFilters}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate
                        x:DataType="local:TLogItemExFilter">
                        <CheckBox
                            MinWidth="0"
                            Content="{x:Bind Display, Mode=OneWay}"
                            Tag="{x:Bind Value, Mode=OneWay}"
                            IsChecked="{x:Bind IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Margin="0,0,20,0" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <ListView
            Padding="0, 5, 0, 5"
            Grid.Row="1"
            Background="{ThemeResource SolidBackgroundFillColorSecondaryBrush}"
            ItemTemplate="{StaticResource LogItemTemplate}"
            ItemsSource="{x:Bind Vm.FilteredLogItems}" />
    </Grid>

</UserControl>
